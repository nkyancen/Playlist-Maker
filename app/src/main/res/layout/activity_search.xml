<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:orientation="vertical"
    tools:context=".generalView.SearchActivity">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/searchHeader"
        style="@style/ToolBar"
        app:title="@string/search" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginHorizontal="@dimen/search_horizontal_padding"
        android:layout_marginVertical="@dimen/search_vertical_padding"
        android:background="@drawable/rounded_edit_text"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:autofillHints=""
            android:background="@null"
            android:drawableStart="@drawable/ic_search_16"
            android:drawablePadding="4dp"
            android:drawableTint="?attr/colorOnSecondary"
            android:hint="@string/search"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:maxLines="1"
            android:singleLine="true"
            android:textAppearance="@style/SettingsTextStyle"
            android:textColor="@color/dark_gray"
            android:textColorHint="?attr/colorOnSecondary"
            tools:ignore="LabelFor" />

        <ImageView
            android:id="@+id/clearIcon"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:contentDescription="@string/search"
            android:paddingHorizontal="12dp"
            android:paddingVertical="@dimen/search_icon_vertical_padding"
            android:src="@drawable/ic_clear_16"
            android:visibility="gone"
            app:tint="?attr/colorOnSecondary" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/searchListRecycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/search_results_margin_top"
            android:orientation="vertical"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <LinearLayout
            android:id="@+id/searchPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/search_placeholder_margin_horizontal"
            android:layout_marginTop="102dp"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:id="@+id/searchPlaceholderImage"
                android:layout_width="@dimen/search_placeholder_image_size"
                android:layout_height="@dimen/search_placeholder_image_size"
                android:layout_gravity="center_horizontal"
                android:contentDescription="@string/search"
                android:src="@drawable/ic_placeholder_withot_intenet_120" />

            <TextView
                android:id="@+id/searchPlaceholderText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/search_results_margin_top"
                android:text="@string/search_without_internet"
                android:textAlignment="center"
                android:textAppearance="@style/SearchTextStyle.Placeholder" />

            <Button
                android:id="@+id/searchPlaceholderButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/search_placeholder_margin_horizontal"
                android:backgroundTint="?attr/colorOnPrimary"
                android:paddingVertical="@dimen/search_placeholder_button_padding_vertical"
                android:text="@string/search_refresh"
                android:textAppearance="@style/SearchTextStyle.Placeholder.Button"
                android:textColor="?attr/colorPrimary"
                app:cornerRadius="@dimen/search_placeholder_button_corner_radius"
                android:visibility="gone"/>
        </LinearLayout>

    </FrameLayout>


</LinearLayout>