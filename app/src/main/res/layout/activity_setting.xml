<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LinearVertical"
    android:background="?attr/colorPrimary"
    tools:context=".SettingsActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/header_settings"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_marginBottom="24dp"
        app:contentInsetStartWithNavigation="64dp"
        app:navigationIcon="@drawable/ic_arrow_back_24"
        app:navigationIconTint="?attr/colorOnPrimary"
        app:title="@string/settings"
        app:titleTextAppearance="@style/HeaderTextStyle"
        app:titleTextColor="?attr/colorOnPrimary"/>


    <androidx.appcompat.widget.SwitchCompat
        android:id="@+id/switch_dark_theme"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/no_color"
        android:fontFamily="@font/ys_display_regular"
        android:foreground="?attr/selectableItemBackground"
        android:paddingVertical="21dp"
        android:paddingStart="@dimen/settings_padding_text_start"
        android:paddingEnd="@dimen/settings_padding_text_end"
        android:text="@string/dark_theme"
        android:textColor="?attr/colorOnPrimary"
        android:textSize="@dimen/settings_text_size"
        app:switchMinWidth="35dp"
        app:trackTint="@color/switch_track_color"
        app:thumbTint="@color/switch_thumb_color"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_share"
        style="@style/ButtonSettings"
        android:text="@string/share"
        app:icon="@drawable/ic_share_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_support"
        style="@style/ButtonSettings"
        android:text="@string/support"
        app:icon="@drawable/ic_support_24" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_user_agreement"
        style="@style/ButtonSettings"
        android:text="@string/user_agreement"
        app:icon="@drawable/ic_arrow_forward_24" />

</LinearLayout>