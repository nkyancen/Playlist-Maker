<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/playlistItemCover"
        android:layout_width="@dimen/album_art_size"
        android:layout_height="@dimen/album_art_size"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"
        android:background="@drawable/rounded_small_image"
        android:clipToOutline="true"
        android:scaleType="centerCrop"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_placeholder_48" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="44dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/playlistItemTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/PlaylistSmallTextStyle"
            tools:text="Какое-то название Show must go on!" />

        <TextView
            android:id="@+id/playlistItemTracksAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/PlaylistSmallTextStyle.Secondary"
            android:textSize="@dimen/history_secondary_text_size"
            tools:text="100500 Треков" />
    </LinearLayout>
</LinearLayout>