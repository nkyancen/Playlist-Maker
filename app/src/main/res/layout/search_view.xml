<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/searchView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/albumImage"
        android:layout_width="@dimen/album_art_size"
        android:layout_height="@dimen/album_art_size"
        android:layout_marginVertical="8dp"
        android:layout_marginStart="13dp"
        tools:ignore="ContentDescription"
        tools:src="@drawable/ic_placeholder_48" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="8dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/trackName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAppearance="@style/SearchTextStyle"
            tools:text="Show must go on!" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/artistName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/SearchTextStyle.Secondary"
                android:textSize="@dimen/search_secondary_text_size"
                tools:text="The Beatles" />

            <TextView
                android:id="@+id/trackTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/SearchTextStyle.Secondary"
                android:textSize="@dimen/search_secondary_text_size"
                app:drawableStartCompat="@drawable/ic_comma_13"
                app:drawableTint="?attr/colorPrimaryVariant"
                tools:text="12:34" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/track_forward_size"
        android:layout_height="@dimen/track_forward_size"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="12dp"
        android:src="@drawable/ic_arrow_forward_24"
        app:tint="?attr/colorPrimaryVariant"
        tools:ignore="ContentDescription" />
</LinearLayout>