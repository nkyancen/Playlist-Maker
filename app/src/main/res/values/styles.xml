<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="SettingsTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="SearchTextStyle">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/search_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SearchTextStyle.Placeholder">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/search_errors_text_size</item>
    </style>

    <style name="SearchTextStyle.Placeholder.Button">
        <item name="android:textSize">@dimen/search_errors_button_text_size</item>
    </style>

    <style name="SearchTextStyle.Secondary">
        <item name="android:textSize">@dimen/search_secondary_text_size</item>
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="PlayerTextStyle">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/player_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="PlayerTextStyle.Secondary">
        <item name="android:textSize">@dimen/player_secondary_text_size</item>
    </style>

    <style name="PlayerTextStyle.Additional">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textSize">@dimen/player_additional_text_size</item>
    </style>

    <style name="PlayerTextStyle.Additional.Name">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="PlayerTextStyle.Additional.Item">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Button" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:outlineSpotShadowColor">@color/no_color</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <style name="Button.Main">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textAppearance">@style/HeaderTextStyle</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/header_text_size</item>
        <item name="iconTint">@color/dark_gray</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconGravity">textStart</item>
        <item name="cornerRadius">@dimen/corner_radius</item>
    </style>

    <style name="Button.Settings">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/no_color</item>
        <item name="android:textAppearance">@style/SettingsTextStyle</item>
        <item name="android:paddingStart">@dimen/settings_padding_text_start</item>
        <item name="android:paddingTop">@dimen/settings_padding_text_top</item>
        <item name="android:paddingEnd">@dimen/settings_padding_text_end</item>
        <item name="android:paddingBottom">@dimen/settings_padding_text_bottom</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">@dimen/main_icon_padding</item>
        <item name="iconTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ButtonPlaceholderSearch" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/search_placeholder_margin_horizontal</item>
        <item name="android:backgroundTint">?attr/colorOnPrimary</item>
        <item name="android:paddingVertical">@dimen/search_placeholder_button_padding_vertical
        </item>
        <item name="android:paddingHorizontal">@dimen/search_placeholder_button_padding_horizontal
        </item>
        <item name="android:textAppearance">@style/SearchTextStyle.Placeholder.Button</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="cornerRadius">@dimen/search_placeholder_button_corner_radius</item>
    </style>

    <style name="TextViewPlaceholderSearch" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAppearance">@style/SearchTextStyle.Placeholder</item>
    </style>

    <style name="LinearVertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearVertical.SearchPlaceholder">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="SearchRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="layoutManager">androidx.recyclerview.widget.LinearLayoutManager</item>
    </style>

    <style name="ToolBar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="contentInsetStartWithNavigation">64dp</item>
        <item name="navigationIcon">@drawable/ic_arrow_back_24</item>
        <item name="navigationIconTint">?attr/colorOnPrimary</item>
        <item name="titleTextAppearance">@style/HeaderTextStyle</item>
        <item name="titleTextColor">?attr/colorOnPrimary</item>
    </style>

    <style name="TextViewPlayerItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">9dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextViewPlayerItem.Name">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textAppearance">@style/PlayerTextStyle.Additional.Name</item>
        <item name="layout_constraintStart_toEndOf">@id/playerAdditionalStartBaseLine</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="layout_constraintHorizontal_bias">0.0</item>
    </style>

    <style name="TextViewPlayerItem.Item">
        <item name="android:layout_width">0dp</item>
        <item name="android:textAppearance">@style/PlayerTextStyle.Additional.Item</item>
        <item name="android:textAlignment">textEnd</item>
        <item name="layout_constraintEnd_toStartOf">@id/playerAdditionalEndBaseLine</item>
    </style>

    <style name="ImageButtonPlayer" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="android:layout_height">@dimen/player_image_button_size</item>
        <item name="android:layout_width">@dimen/player_image_button_size</item>
        <item name="android:background">@drawable/round_button</item>
    </style>
</resources>