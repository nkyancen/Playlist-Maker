<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeaderTextStyle">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

    <style name="ButtonSettings" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:outlineSpotShadowColor">@color/white</item>
        <item name="android:paddingStart">@dimen/settings_padding_text_start</item>
        <item name="android:paddingTop">@dimen/settings_padding_text_top</item>
        <item name="android:paddingEnd">@dimen/settings_padding_text_end</item>
        <item name="android:paddingBottom">@dimen/settings_padding_text_bottom</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
    </style>

    <style name="MainButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/dark_grey</item>
        <item name="android:textSize">@dimen/header_text_size</item>
    </style>

</resources>